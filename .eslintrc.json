{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "globals": {
    "window": true,
    "document": true,
    "console": true,
    "jQuery": true,
    "$": true,
    "lmsChat": true,
    "LMSChat": true,
    "ajaxUrl": true
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "no-redeclare": "error",
    "no-unreachable": "error",
    "no-empty": "warn",
    "no-extra-semi": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "no-mixed-spaces-and-tabs": "error",
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "comma-dangle": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "prefer-const": "warn",
    "no-var": "warn"
  }
}